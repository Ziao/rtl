{
    "name": "rtl-assignment",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "format": "prettier --write 'index.html' '{src,cypress}/**/*.{ts,tsx,js,jsx,json,md,css,scss,less,sass,cjs}'",
        "format:check": "prettier --check 'index.html' '{src,cypress}/**/*.{ts,tsx,js,jsx,json,md,css,scss,less,sass,cjs}'",
        "lint": "tsc --noemit && yarn eslint 'src/**/*.{ts,tsx}'",
        "lint:fix": "eslint --fix 'src/**/*.{ts,tsx}'",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepare": "husky install"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "react-app"
        ],
        "rules": {
            "@typescript-eslint/no-unused-vars": "error",
            "react-hooks/exhaustive-deps": "error"
        }
    },
    "dependencies": {
        "@tailwindcss/line-clamp": "^0.4.2",
        "@tanstack/react-query": "^4.3.4",
        "axios": "^0.27.2",
        "classnames": "^2.3.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-conventional": "^17.1.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@types/jest": "^29.0.3",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@vitejs/plugin-react": "^2.1.0",
        "autoprefixer": "^10.4.11",
        "daisyui": "^2.28.0",
        "eslint": "^8.23.1",
        "eslint-config-react-app": "^7.0.1",
        "husky": "^8.0.1",
        "jest": "^29.0.3",
        "jest-environment-jsdom": "^29.0.3",
        "jest-mock-axios": "^4.7.0-beta",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "sass": "^1.54.9",
        "tailwindcss": "^3.1.8",
        "ts-jest": "^29.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.6.4",
        "vite": "^3.1.0"
    }
}
